<%- include("partials/head.ejs") %>
<div id="pageContainer" class="crudFormContainer">
  <h2>Ingresar nuevo producto</h2>
  <form id="newProductForm">
    <label for="nameProd">Nombre producto</label>
    <input
      type="text"
      name="nameProd"
      id="nameProd"
      placeholder="Ingrese el nombre del producto"
      required
    />
    <label for="category">Categoria</label>
    <input
      type="text"
      name="category"
      id="category"
      placeholder="Ingrese la categoria del producto"
      required
    />
    <label for="price">Precio</label>
    <input
      type="number"
      name="price"
      id="price"
      placeholder="Ingrese el precio del producto"
      required
    />
    <label for="image">Imagen</label>
    <input
      type="text"
      name="image"
      id="image"
      placeholder="Ingrese Url de la imagen del producto"
      required
    />
    <input type="submit" value="Crear" />
  </form>
</div>
<script>
  let newProductForm = document.getElementById("newProductForm");
  let getIdLista = document.getElementById("getIdList");

  newProductForm.addEventListener("submit", async (e) => {
    e.preventDefault();
    let nameProd = document.getElementById("nameProd").value;
    let category = document.getElementById("category").value;
    let price = document.getElementById("price").value;
    let image = document.getElementById("image").value;
    let datos = await enviarDatosProducto(nameProd, category, price, image);
  });

  async function enviarDatosProducto(name, category, price, image) {
    try {
      let respuesta = await fetch(`https://tpintegradorbackgrupo6-production.up.railway.app/api/products`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          name: name,
          category: category,
          price: price,
          image: image,
        }),
      });
      if (!respuesta.ok) {
        throw new Error("Error al enviar nuevo producto");
      }
      let datos = await respuesta.json();
      window.location.href = "/dashboard";
      return datos;
    } catch (error) {
      console.error("Error: ", error);
    }
  }
</script>
